<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:top="5dp">
                <shape>
                    <corners android:radius="5dp" />
                    <solid android:color="@color/btn_login_color_outer_shadow" />
                </shape>
            </item>
            <item android:bottom="3dp">
                <shape>
                    <solid android:color="@color/btn_login_color_pressed"></solid>
                    <corners android:radius="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:top="5dp">
                <shape>
                    <corners android:radius="5dp" />
                    <solid android:color="@color/btn_login_color_outer_shadow" />
                </shape>
            </item>
            <item android:bottom="3dp">
                <shape>
                    <solid android:color="@color/btn_login_color"></solid>
                    <corners android:radius="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
