<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/timeline_upper_divider"
        android:layout_width="@dimen/timeline_item_stroke"
        android:layout_height="@dimen/timeline_item_stroke"
        android:background="@drawable/timeline_divider"
        android:layout_centerHorizontal="true"></View>
    <View
        android:id="@+id/timeline_item_circle"
        android:layout_width="@dimen/timeline_item_size"
        android:layout_height="@dimen/timeline_item_size"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/timeline_upper_divider"
        android:background="@drawable/timeline_item_background">
    </View>
    <View
        android:id="@+id/timeline_lower_divider"
        android:layout_width="@dimen/timeline_item_stroke"
        android:layout_height="@dimen/timeline_item_stroke"
        android:background="@drawable/timeline_divider"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/timeline_item_circle"></View>
    <com.blacksite.meditation.view.MyFarsiTextView
        android:id="@+id/timeline_item_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/timeline_item_text_size"
        android:text="05"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>